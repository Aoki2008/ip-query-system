# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=true

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# GeoIP配置
GEOIP_DB_PATH=./data/GeoLite2-City.mmdb
GEOIP_UPDATE_INTERVAL=86400

# API配置
API_TITLE="IP查询API服务"
API_VERSION="1.0.0"
API_DESCRIPTION="高性能异步IP地理位置查询服务"

# CORS配置
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# 性能配置
MAX_BATCH_SIZE=100
CONCURRENT_LIMIT=50
REQUEST_TIMEOUT=30

# 监控配置
ENABLE_METRICS=true
METRICS_PATH=/metrics
