# 应用配置
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ip_query_system
DB_USER=ip_query_user
DB_PASSWORD=your_db_password_here

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# MaxMind配置
MAXMIND_LICENSE_KEY=your_maxmind_license_key_here
MAXMIND_USER_ID=your_maxmind_user_id_here

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# 限流配置
GLOBAL_RATE_LIMIT=1000
API_RATE_LIMIT_MINUTE=60
API_RATE_LIMIT_DAY=1000
GUEST_RATE_LIMIT_DAY=20

# 缓存配置
CACHE_TTL=3600
IP_CACHE_TTL=3600

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@yourdomain.com

# 安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=.mmdb,.csv,.json

# API文档配置
ENABLE_DOCS=true
DOCS_PATH=/docs
